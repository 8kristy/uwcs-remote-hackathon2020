{
  "name": "Page Test",
  "version": "1.0",
  "description": "Build an Extension!",
  "background": {
    "scripts": ["js/background.js", "js/content.js"],
    "persistent": false,
    "run_at": "document_end"
  },
  "browser_action": {
    "default_title": "Test",
    "default_popup": "index.html"
  },
  "content_scripts": [{
   "matches": ["<all_urls>"],
   "js": ["js/content.js"],
   "css":["style.css"]
   }],
  "permissions": ["activeTab", "<all_urls>"],
  "manifest_version": 2
}