{
  "name": "Fake News Extension",
  "version": "1.0",
  "description": "Warn a user when they are viewing misleading or fake news!",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "imgs/get_started16.png",
      "32": "imgs/get_started32.png",
      "48": "imgs/get_started48.png",
      "128": "imgs/get_started128.png"
    }
  },
  "icons": {
    "16": "imgs/get_started16.png",
    "32": "imgs/get_started32.png",
    "48": "imgs/get_started48.png",
    "128": "imgs/get_started128.png"
  },
  "options_page": "options.html",
  "manifest_version": 2
}